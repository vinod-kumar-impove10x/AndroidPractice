<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/sum_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sum"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/android_toast_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Android Toast"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/custom_toast_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Custom Toast"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/toggle_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Toggle Button"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/check_box_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Check Box"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Radio Button"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/ratingbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rating Bar"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/seek_bar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seek Bar"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/datepicker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date Picker"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/time_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Picker"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/progress_bar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress Bar"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/vertical_scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vertical Scroll View"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/horizontal_scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horizontal Scroll View"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/list_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List View"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/alert_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Alert Dialog"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/progress_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress Dialog"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/web_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web View"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>